    else
    {
      <div class="header">
        <div class="sides blog">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="logo">HOME</a>
            <a asp-area="" asp-controller="Posts" asp-action="Index" class="logo">BLOG</a>
        </div>
        <div class="sides login">
          <div class="dropdown"> 
            LOG ON
            <div class="dropdown-content" >
            <a id="register" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
            <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
          </div>
