@model LetsChatFinal.Models.Post

@{
    ViewData["Title"] = "Create New Post";
}

<div class="admin-header">
    <h1>Create New Post</h1>
    <a asp-action="Index" class="back-btn">Back to Manage</a>
</div>

<div class="admin-content">
    <form method="post" action="/a9z7b3x-manage-posts/create">
        @Html.AntiForgeryToken()
        
        <div class="form-group">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-input" placeholder="Enter post title..." required />
            <span asp-validation-for="Title" class="validation-error"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Content" class="form-label">Content</label>
            <textarea asp-for="Content" class="form-textarea" rows="15" placeholder="Write your post content here..." required></textarea>
            <span asp-validation-for="Content" class="validation-error"></span>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="create-btn">Create Post</button>
            <a href="/a9z7b3x-manage-posts" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div> 