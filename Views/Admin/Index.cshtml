@model IEnumerable<LetsChatFinal.Models.Post>

@{
    ViewData["Title"] = "Manage Posts";
}

<div class="admin-header">
    <h1>Manage Posts</h1>
    <a asp-action="Create" class="create-btn">Create New Post</a>
</div>

<div class="admin-content">
    <table class="admin-table">
        <thead>
            <tr>
                <th>Post Title</th>
                <th>Date Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Created.ToString("MM/dd/yyyy")</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 